<div class="container">
  <div class="row">
    <div class="col-12 col-sm-6 col-md-8">
      <h2><%= @artist.name %></h2>
      <h3>Albums (<%= @artist.albums.count %>)</h3>
      <% @artist.albums.each do |album| %>
      <div class="thumbnail">
        <img src="<%= album.image_url %>" alt="<%= album.name %>"/>
        <div class="caption">
          <h4><%= album.name %></h4>
          <p><%= album.released_at.year %></p>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-6 col-md-4">
      <img
        src="<%= @artist.image_url %>"
        alt="<%= @artist.name %>"
        class="img-thumbnail"
      />
    </div>
  </div>
</div>
